<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.symptom.NewlyAddedSymptomFragment"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/name_card_view"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            app:cardElevation="15dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/rectangle_5"
                    android:layout_width="295dp"
                    android:layout_height="174dp"
                    android:background="@drawable/daily_view_card" />

                <TextView
                    android:id="@+id/newly_added_symptom_fragment_name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Symptom Name"
                    android:layout_centerInParent="true"
                    android:textSize="24sp"
                    android:textColor="#FFF"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rate_pain" />

        <EditText
            android:id="@+id/rating_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/rate_pain_from_1_to_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pain Duration " />

        <EditText
            android:id="@+id/duration_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Pain Duration in hours" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description " />

        <EditText
            android:id="@+id/description__edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Pain Duration in hours" />

        <Button
            android:id="@+id/finish_reporting_symptom_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Symptom" />
    </LinearLayout>
</LinearLayout>